@{
    ViewBag.Title = "MySlots";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
    string[] TableHeaders = new string[] {"DoseNo"
                        ,"Status"
                       ,"Date"
                        ,"TimeOfDay",
                        "UserId",
                        "City",
                        "VaccineName",
                        "Reschedule"

                        };
}





<div class="table" style="text-align:center;margin-top:70px;">
    @if (Model.Count() != 0)
    {
        <table id="myTable" class="table table-bordered table-hover table-sm">
            <thead style="background-color:#118ee8;color:white;">
                <tr style="align-items:center;">
                    @{
                        foreach (var head in TableHeaders)
                        {
                            <th style="text-align:center;">
                                @head
                            </th>
                        }
                    }
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.DoseNo)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.Status)
                        </td>
                        
          
                        <td>
                            @Html.DisplayFor(modelItem => item.DateTime.Date)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DateTime.TimeOfDay)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.UserId)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.Center.City)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Vaccination.VaccineName)
                        </td>
                        @*<td>
                            @Html.DisplayFor(modelItem => item.SlotId)
                        </td>*@
                        <td>
                            @Html.ActionLink("Reschedule", "Reshedule", new { id = item.SlotId })
                        </td>
                       
                    </tr>
                }

            </tbody>
        </table>
    }
    else
    {
        <tr>
            <td colspan="3" , style="color:red">
                No Slot Available
            </td>
        </tr>
    }
</div>
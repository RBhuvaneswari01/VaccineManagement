<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css"
    rel="stylesheet"
    integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx"
    crossorigin="anonymous" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa"
            crossorigin="anonymous"></script>
    <title>@ViewBag.Title</title>
    <style>
        body {
            margin: 0;
            padding: 0;
           background-image:url(../../images/welcomebg.png);
           background-repeat:no-repeat;
            font-family: 'Raleway',sans-serif;
            color: #fff;
        }

        .banner {
            height: 100vh;
            width: 100%;
            /* background-color:antiquewhite;*/
            background-image: url(../../images/welcomebg.png);
            background-repeat: no-repeat;
            background-position: top;
            background-size: cover;
        }

            .banner .navbar {
                margin-top: 4%;
            }

            .banner .navbar-brand {
                color: #ffffff;
                font-size: 1.8rem;
                font-weight: 700;
                margin-left: 10%;
            }

            .banner .nav {
                margin-right: 10%;
            }

            .banner .nav {
                margin-right: 10%;
            }

                .banner .nav li a {
                    color: #0b27ee;
                    font-size: 1.2rem;
                }

            .banner .info {
                margin-top: 15%;
                transform: translateY(-15%);
            }

                .banner .info h1 {
                    font-size: 2.5em;
                    font-weight: 700;
                    color: blue;
                    letter-spacing: 2px;
                }

                .banner .info p {
                    font-size: 2em;
                    font-weight: 500;
                    color: forestgreen;
                    letter-spacing: 2px;
                }

                .banner .info a {
                    margin-left: 50%;
                    transform: translateX(-50%);
                    color: white;
                    background: green;
                    padding: 10px 20px;
                    font-size: 2.5em;
                    font-weight: 600;
                }

                    .banner .info a:hover {
                        background: blue;
                    }


   
    </style>
</head>
<body>
    <div class="container-fluid banner">
      
        <div class="row">
            <div class="col-md-12">
                <nav class="navbar  navbar-md ">

                    <div class="navbar-brand">
                        Online Vaccine Management
                    </div>
                    <ul class="nav">


                        <li>
                            <a class="nav-link" href="@Url.Action("FAQ", "Home")">FAQ</a>
                        </li>
                        @*<li>
                            <a class="nav-link" href="#">Contact</a>
                        </li>*@
                    </ul>
                </nav>
            </div>
            <div class="col-md-8 offset-md-2 info">
                <h1 class="test-center">
                    Welcome! Are You an Admin Or User Please Select The Option




                </h1>
                <br/>
                <br/>
                <br/>
                <br/>

                <div class="row">
                    @*<a href="#" class="btn test-center">Admin</a>

                    <a href="#" class="btn  test-center">User</a>*@
                    <div class="col">
                        <a href='@Url.Action("Login", "Admin")' class="btn test-center">Admin</a>
                    </div>
                    <div class="col">
                        <a href='@Url.Action("Login", "User")' class="btn  test-center">User</a>
                    </div>

                </div>
               

                @*<div class="btn-group" >
                    <button >Admin</button>
                    <br/>
                    <br/>
                    
                    <button >User</button>
                   
                </div>*@
            </div>
        </div>
    </div>


    <div>
        @RenderBody()
    </div>
</body>
</html>


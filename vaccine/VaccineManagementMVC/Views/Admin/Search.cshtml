@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout2.cshtml";
    string[] TableHeaders = new string[] {"Name"
                        ,"Password"
                        ,"Age"
                        ,"PhoneNo"
                        ,"AadhaarNo",
                        "Edit/Delete"
                        };
}

<marquee style="color:black;font-weight:bold;"><h5>Hi admin!,This is the Users List,You can Add ,Edit,Delete,Update</h5></marquee>

<p>
    <button style="border-radius: 30px; border: none; padding: 15px 20px; background-color:#2dee07; color: white;margin-top:80px; ">@Html.ActionLink("Add Users", "Create") </button>

</p>
<div style="margin-left:400px;">
    @using (Html.BeginForm("Search", "Admin", FormMethod.Get))
    {
        @Html.TextBox("Searching")
        <input type="submit" value="Search" />
    }
</div>

<style>
    .text-red {
        color: red;
    }
</style>
<div class="table" style="text-align:center;margin-top:70px;">
    <table id="myTable" class="table table-bordered table-hover table-sm">
        <thead style="background-color:#118ee8;color:white;">
            <tr style="align-items:center;">
                @{
                    foreach (var head in TableHeaders)
                    {
                        <th style="text-align:center;">
                            @head
                        </th>
                    }
                }
            </tr>
        </thead>

        <tbody>
            
                @if (Model.Count() != 0)
                {
                    foreach (var Data in Model)
                    {
                        <tr>
                            <td style="background-color:#b3daf6;">@Data.Name</td>
                            <td style="background-color:#e8eff4">@Data.Password</td>
                            <td style="background-color:#b3daf6;">@Data.Age</td>
                            <td style="background-color:#e8eff4">@Data.PhoneNo</td>
                            <td style="background-color:#b3daf6;">@Data.AadhaarNo</td>

                            <td style="background-color:#e8eff4">
                                <p data-placement="top" data-toggle="tooltip" title="Edit">
                                    <button class="btn btn-primary btn-xs" data-title="Edit" data-toggle="modal" data-target="#edit"><span class="glyphicon glyphicon-pencil"></span>@Html.ActionLink("..", "Edit", new { id = Data.UserId })</button> <button class="btn btn-danger btn-xs" data-title="Delete" data-toggle="modal" data-target="#delete">
                                        <span class="glyphicon glyphicon-trash"></span> @Html.ActionLink("..", "Delete", new { id = Data.UserId })
                                    </button>
                                </p>

                            </td>


                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="3" , style="color:red">
                            No Match Found
                        </td>
                    </tr>
                }
            
        </tbody>

    </table>
</div>